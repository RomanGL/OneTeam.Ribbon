<Page x:Class="OneTeam.Ribbon.TestApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ribbon="using:OneTeam.Ribbon"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ribbon:Ribbon Background="#FF2B579A"
                       Foreground="White"
                       Title="OneTeam.Ribbon.TestApp"
                       x:Name="ribbon">
            <ribbon:RibbonTab Header="Tab 1">
                <Rectangle Height="100"
                           Fill="Red" />
            </ribbon:RibbonTab>

            <ribbon:RibbonTab Header="Tab 2">
                <Rectangle Height="100"
                           Fill="Blue" />
            </ribbon:RibbonTab>

            <ribbon:RibbonTab Header="Tab 3">
                <Rectangle Height="100"
                           Fill="Yellow" />
            </ribbon:RibbonTab>
        </ribbon:Ribbon>
        
        <Button Content="Change background color"
                HorizontalAlignment="Center"
                Click="ChangeBackgroundButtonClick"
                Margin="0,20,0,0" />
        <Button Content="Change foreground color"
                HorizontalAlignment="Center"
                Click="ChangeForegroundButtonClick"
                Margin="0,20,0,0" />
    </StackPanel>
</Page>
